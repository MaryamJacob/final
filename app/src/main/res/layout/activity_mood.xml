<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you feeling today?"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/moods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/happy"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="86dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="83dp"
            android:layout_height="88dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/neutral"
            tools:layout_editor_absoluteY="86dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="89dp"
            android:layout_height="88dp"
            app:srcCompat="@drawable/sad"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="86dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="95dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/Upset"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="86dp" />


        <Button
            android:id="@+id/button_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Happy"
            tools:layout_editor_absoluteX="-5dp"
            tools:layout_editor_absoluteY="194dp" />

        <Button
            android:id="@+id/button_sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_happy"
            android:layout_centerHorizontal="true"
            android:text="Sad"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="194dp" />

        <Button
            android:id="@+id/button_anxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_sad"
            android:layout_centerHorizontal="true"
            android:text="Anxious"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="194dp" />

        <Button
            android:id="@+id/button_upset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_anxious"
            android:layout_centerHorizontal="true"
            android:text="Upset"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="194dp" />

    </GridLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>